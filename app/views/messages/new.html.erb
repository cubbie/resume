
  <%= form_for contact_path do |f| %>
      <div class="field">
        <%= f.text_field :name, placeholder: "Name" %>
      </div>
      <div class="field">
        <%= f.email_field :email, placeholder: "Email"%>
      </div>
      <div class="field">
        <%= f.text_area :content, placeholder: "Message"%>
      </div>
      <div class="field">
        <%= f.submit "Send" %>
      </div>
  <% end %>
